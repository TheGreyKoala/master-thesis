ContentClass:
	'content' 'class' name=ID
	('is' 'recognized' 'by' selector=ContentSelector)?
	('classifies' (features+=Feature)+)?;

PageClass:
	'page' 'class' name=ID
	'is' 'recognized' 'by' selector=PageSelector
	('classifies' (features+=Feature)+)?;

ReferenceClass:
	'reference' 'class' name=ID
	('is' 'recognized' 'by' selector=ReferenceSelector)?;